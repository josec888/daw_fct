{% extends 'base.html.twig' %}

{% block title %}Session{% endblock %}

{% block body %}
    <h1>Session</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ session.id }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ session.start ? session.start|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ session.end ? session.end|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ session.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('session_index') }}">back to list</a>

    <a href="{{ path('session_edit', {'id': session.id}) }}">edit</a>

    {{ include('session/_delete_form.html.twig') }}
{% endblock %}
