{% extends 'base.html.twig' %}

{% block title %}Teacher{% endblock %}

{% block body %}
    <h1>Teacher</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ teacher.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ teacher.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ teacher.lastname }}</td>
            </tr>
            <tr>
                <th>Dni</th>
                <td>{{ teacher.dni }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ teacher.phone }}</td>
            </tr>
            <tr>
                <th>Department</th>
                <td>{{ teacher.department }}</td>
            </tr>
            <tr>
                <th>Nwatch</th>
                <td>{{ teacher.nwatch }}</td>
            </tr>
            <tr>
                <th>Enable</th>
                <td>{{ teacher.enable ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('teacher_index') }}">back to list</a>

    <a href="{{ path('teacher_edit', {'id': teacher.id}) }}">edit</a>

    {{ include('teacher/_delete_form.html.twig') }}
{% endblock %}
